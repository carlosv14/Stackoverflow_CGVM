@model WebApplication1.Models.LoginModel
@{
    ViewBag.Title = "Login";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-danger" role="alert">@ViewBag.Message</div>
}
<head>
    <title></title>
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="container">
    <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                <div style="float: right; font-size: 80%; position: relative; top: -10px">
                    <div>
                        @Html.ActionLink("Forgot Password?", "PasswordRecovery", "Account")
                    </div>
                </div>
            </div>

            <div style="padding-top: 30px" class="panel-body">

                <div style="display: none" id="login-alert" class="alert alert-danger col-sm-12"></div>

                <form id="loginform" class="form-horizontal" role="form">

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="login-username" type="text" class="form-control" name="username" value="" placeholder="username or email">
                    </div>

                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="login-password" type="password" class="form-control" name="password" placeholder="password">
                    </div>





                    <div style="margin-top: 10px" class="form-group">
                        <!-- Button -->

                        <div class="col-sm-12 controls">
                            <input type="submit" value="Login" class="btn btn-success"/>

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12 control">
                            <div style="border-top: 1px solid #888; padding-top: 15px; font-size: 85%">
                                Don't have an account!
                                <a href="#" onclick=" $('#loginbox').hide(); $('#signupbox').show() ">
                                    Sign Up Here
                                </a>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
        <form role="form" action="C:/Users/Carlos Varela/Documents/Visual Studio 2013/Projects/Stackoverflow_CGVM/WebApplication1/Controllers/AccountController/ValidateCaptcha" method="POST">
            <div class="g-recaptcha" data-sitekey="6LfdFAQTAAAAALtluTfTHOVbgONNiA8PWFPXaBLI"></div>
        </form>
       
    </div>
   




    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
