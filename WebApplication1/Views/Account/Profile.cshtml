@model WebApplication1.Models.ProfileModel
<html>
<body >
    <div class="container">
        <div class="row">
            <div class="col-md-5  toppad  pull-right col-md-offset-3 ">
                <br>
                <p class=" text-info"> Last Seen @Html.DisplayFor(model => model.LastSeen)</p>
            </div>
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad">


                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h3 class="panel-title">@Html.DisplayFor(model => model.Name) @Html.DisplayFor(model => model.LastName)</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-3 col-lg-3 " align="center">
                                <img alt="User Pic" src="https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=100" class="img-circle">
                            </div>


                            <div class=" col-md-9 col-lg-9 ">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>@Html.DisplayNameFor(model => model.Email):</td>
                                            <td>@Html.DisplayFor(model => model.Email)</td>
                                        </tr>
                                        <tr>
                                            <td>@Html.DisplayNameFor(model => model.RegistrationDate):</td>
                                            <td>@Html.DisplayFor(model => model.RegistrationDate)</td>
                                        </tr>
                                        <tr>
                                            <td>@Html.DisplayNameFor(model => model.Vistas):</td>
                                            <td>@Html.DisplayFor(model => model.Vistas)</td>
                                        </tr>
                                        <tr>
                                            <td></td>
                                            <td></td>
                                        </tr>
                                    </tbody>
                                </table>


                                @if (Model.preguntas != null)
                                {
                                    <p>
                                        <strong style="color: green"> Last 5 Questions: </strong>
                                    </p>

                                    foreach (var q in Model.preguntas)
                                    {

                                        if (q != null)
                                        {
                                            <p>

                                                @q.CreationDate

                                                @Html.ActionLink(q.Title, "Detail", "Question", new { Id = q.Id }, null)
                                            </p>



                                        }
                                    }
                                }


                                @if (Model.respuestas != null)
                                {
                                    <p>
                                        <strong style="color: lightseagreen"> Last 5 Answers: </strong>
                                    </p>

                                    foreach (var r in Model.respuestas)
                                    {

                                        if (r != null)
                                        {
                                            <p>

                                                @r.CreationDate

                                                @Html.ActionLink(r.AnswerDescription.Substring(0, 25), "ViewAnswer", "Answer", new { id = r.Id }, null)
                                            </p>



                                        }
                                    }
                                }






                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <a data-original-title="Broadcast Message" data-toggle="tooltip" type="button" class="btn btn-sm btn-primary"><i class="glyphicon glyphicon-envelope"></i></a>
                        <span class="pull-right">
                            <a href="edit.html" data-original-title="Edit this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-warning"><i class="glyphicon glyphicon-edit"></i></a>
                            <a data-original-title="Remove this user" data-toggle="tooltip" type="button" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
                        </span>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>

</html>

        
        
       
        
      