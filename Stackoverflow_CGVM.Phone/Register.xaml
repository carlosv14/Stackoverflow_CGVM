        <Button x:Name="Register1" Content="Register&#xD;&#xA;" HorizontalAlignment="Left" Margin="154,464,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.402,0.525" Height="57" Click="Register1_Click"/>
